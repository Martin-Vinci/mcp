<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/iconTextColor"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto"
            android:text="My Account(s) *"
            android:textSize="17dp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/my_account"
            style="@style/Widget.AppCompat.Spinner.Underlined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/black"
            android:fontFamily="@font/roboto"
            android:padding="0dp"
            android:spinnerMode="dialog"
            android:textSize="17dp"></Spinner>


        <TextView
            android:id="@+id/lbl_package_type"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto"
            android:text="Transaction Type*"
            android:textSize="17dp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/package_type"
            style="@style/Widget.AppCompat.Spinner.Underlined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/black"
            android:fontFamily="@font/roboto"
            android:padding="0dp"
            android:spinnerMode="dialog"
            android:textSize="17dp"></Spinner>

        <TextView
            android:id="@+id/lbl_referenceNo"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/roboto"
            android:text="Mobile Phone"
            android:textSize="17dp"
            android:textStyle="bold" />


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/referenceNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:hint="Mobile phone number"
            android:inputType="phone"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/lbl_trans_amount"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/roboto"
            android:text="Transaction Amount *"
            android:textSize="17dp"
            android:textStyle="bold"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tran_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:hint="Transaction Amount"
            android:inputType="phone"
            android:textSize="17dp"/>

        <TextView
            android:id="@+id/lbl_otp"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/roboto"
            android:text="OTP"
            android:textSize="17dp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txt_otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:hint="One time pin"
            android:inputType="phone"
            android:textSize="17dp"/>

        <TextView
            android:id="@+id/lbl_mobile_phone"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="15dp"
            android:visibility="gone"
            android:fontFamily="@font/roboto"
            android:text="Mobile Phone"
            android:textSize="17dp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txt_mobile_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:hint="Mobile Phone"
            android:visibility="gone"
            android:inputType="phone"
            android:textSize="17dp"/>

        <Button
            android:id="@+id/process_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:background="@color/colorPrimary"
            android:imeOptions="actionDone|actionSend"
            android:text="Validate"
            android:textColor="@color/card_white"
            android:visibility="visible" />

    </LinearLayout>


</androidx.core.widget.NestedScrollView>
